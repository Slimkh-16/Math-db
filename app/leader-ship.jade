        b обновите
        |  его.
    // PRELOADER
    include _preloader
    // PRELOADER
    // mobile menu
    include _mobile-menu
    // mobile menu
    // wrapper start
    .wrapper
      // header SECTION
      include _header
      // header SECTION
      //banner section
      .banner(style="background:url(assets/images/banner.jpg) 50% 50% no-repeat")
        .banner-caption
          | We make breakthrough products that change
          br
          | the way people use data.
      //banner section
      // page item
      section.page-item
        .container
          .page-left-fixed-nav
            ul.section.table-of-contents
              li.collapse-nav
                a(href='#!') Company
              li.collapse-nav.collapse-nav-active
                span.collapse-nav-span
                 span.icon-ico02 
                 | Leadership Team 
              li.collapse-nav
                a(href='#!') News & Events
                span.collapse-butt.icon-ico22
                ul.collapse-box
                  li
                    span.collapse-nav-active
                      span.icon-ico02 
                      | News
                  li
                    a(href="#!") Blog
                  li
                    a(href="#!") Publications
              li.collapse-nav
                 a(href='#!')  Careers 
              li.collapse-nav
                a(href='#!') Contact Us
          .row
            .col.l9.offset-l3.s12
              .heading-section.align-left.heading-section--red Leadership Team
              .box-info
