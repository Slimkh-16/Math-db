doctype html
html
  head
    include _head

    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body.noscroll
    noscript
      style.
        .preloader {display:none !important;}
      div
        strong For full functionality of this site it is necessary to enable JavaScript. Download the update here 
        a(href="http://enable-javascript.com")
          | enable-javascript.com
      
    //if lte IE 8
      p.off-js
        | Ваш браузер устарел, пожалуйста 
        b обновите
        |  его.
    // PRELOADER
    include _preloader
    // PRELOADER
    // mobile menu
    include _mobile-menu
    // mobile menu
    // wrapper start
    .wrapper
      // header SECTION
      include _header
      // header SECTION
      //banner section
      .banner(style="background:url(assets/images/banner.jpg) 50% 50% no-repeat")
        .banner-caption
         | Serving up the latest news
         br
         | and information about MathDB
      //banner section
      // page item
      section.page-item.news-page
        .container
          .page-left-fixed-nav
            ul.section.table-of-contents
              li.collapse-nav
                a(href='#!') Company
              li.collapse-nav
                a(href='#!') Leadership Team
              li.collapse-nav.active
                a(href='#!').active News & Events
                span.collapse-butt.icon-ico22.active
                ul.collapse-box(style="display:block")
                  li
                    span.collapse-nav-active
                      span.icon-ico02 
                      | News
                  li
                    a(href="#!") Blog
                  li
                    a(href="#!") Publications
              li.collapse-nav
                a(href='#!') Careers
              li.collapse-nav
                a(href='#!') Contact Us
          .row
            .col.l9.offset-l3.s12
              .heading-section.align-left.heading-section--red 
                | News
                .search-news
                  form(action="#")
                    .form-filed
                      input(type="text",required,id="search2")
                      label(for="search2") Search...
                    button(type="submit")
                      span.icon-ico01
              .news-section.hire-section
                mixin hire-item(img,head)
                  .swiper-slide
                    .case-item
                      .cases-img(style="background:url(assets/images/#{img}.jpg) 50% 50% no-repeat")
                      .cases-info
                        .case-date 
                          span.icon-ico12
                          | 15.10.2016
                        a(href="#").cases-heading IT labs Desktop:
                          br
                          | Python for Everybody
                        p Our laboratories around the world provide cost-effective, industrialized software and information technology solutions.
                        a.link-more(href="#")
                          | read more
                .container
                  .row
                    .swiper-container.news-slider
                      .swiper-wrapper
                        +hire-item('pic1','MathDB Desktop')
                        +hire-item('pic2','MathDB Cloud')
                        +hire-item('pic3','MathDB Desktop')
                        +hire-item('pic2','MathDB Cloud')
                        +hire-item('pic1','MathDB Cloud')
                    .swiper-button-next
                    .swiper-button-prev
              .calendar-section
                .heading-contact.align-left Calendar 
                #calendar
              .feed-section
                .container
                  .feed-head Stay in touch
                  form.js_validate(action='#')
                    .form-filed.required-field
                      input#inp1(type='email', required='', data-validate='email')
                      label(for='inp1') Email Address
                    button(type='submit')
                      | SUBSCRIBE
                      span.icon-mail

      .calendar-event
        .close-calendar.js_close_calendar
          span.icon-ico38
        .calendar-title
          | November, 16, 2016
        .calendar-body
          a.calendar-item(href="#")
            .calendar-item__img
              img(src="assets/images/ev1.jpg", alt="")
            .calendar-item__info
              b Tableau Conference, 2016
              .calendar-item__time 3:00 pm - 5:00 pm PST
        a.calendar-all(href="#")
          span.icon-ico02
          | view all in november
      .overlay.js_close_calendar
      // page item
      .puship-bottom-block.clearfix
      .above-footer
    include _footer
