doctype html
html
  head
    include _head

    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body.noscroll
    noscript
      style.
        .preloader {display:none !important;}
      div
        strong For full functionality of this site it is necessary to enable JavaScript. Download the update here 
        a(href="http://enable-javascript.com")
          | enable-javascript.com
      
    //if lte IE 8
      p.off-js
        | Ваш браузер устарел, пожалуйста 
        b обновите
        |  его.
    // PRELOADER
    include _preloader
    // PRELOADER
    // mobile menu
    include _mobile-menu
    // mobile menu
    // wrapper start
    .wrapper
      // header SECTION
      include _header
      // header SECTION
      //banner section
      .banner(style="background:url(assets/images/publication.jpg) 50% 50% no-repeat")
        .banner-caption
         | Serving up the latest news
         br
         | and information about Data Science Portal
      //banner section
      // page item
      section.page-item.public-page
        .container
          .page-left-fixed-nav
            ul.section.table-of-contents
              li.collapse-nav
                a(href='#!') Company
              li.collapse-nav
                a(href='#!') Leadership Team
              li.collapse-nav.active
                a(href='#!').js_collapse_nav.active News & Events
                  span.collapse-butt.icon-ico22
                ul.collapse-box(style="display:block")
                  li
                    a(href="#!") News
                  li
                    a(href="#!") Blog
                  li
                    span.collapse-nav-active
                      span.icon-ico02 
                      | Publications
              li.collapse-nav
                a(href='#!') Careers
              li.collapse-nav
                a(href='#!') Contact Us
          .row
            .col.l8.offset-l3.s12
              .heading-section.align-left.heading-section--red 
                | Publications
              .public-container
                mixin public-item(img)
                  .case-item.public--item
                    .cases-img(style="background:url(assets/images/#{img}.jpg) 50% 50% no-repeat")
                      .public-peop
                        img(src="assets/images/public.png", alt="")
                    .cases-info
                      .case-date 
                        span.icon-ico12
                        time 15.10.2016
                      a(href="#").cases-heading Make powerful data visualizations using any data. Fast and easy.
                      p Our laboratories around the world provide cost-effective, industrialized software and information technology solutions.
                      a.link-more(href="#")
                        | read more
                +public-item('pic1')
                +public-item('pic2')
                +public-item('pic3')
                +public-item('pic2')
                .pagination-section
                  .container
                    a.prev-page(href="#")
                      span.icon-ico36
                    ul
                      li
                        a(href="#") 1
                      li
                        a(href="#") 2
                      li.active
                        span 3
                      li
                        span ...
                      li
                        a(href="#") 8
                    a.page-next(href="#")
                      span.icon-ico37 
              .feed-section
                .container
                  .feed-head Stay in touch
                  form.js_validate(action='#')
                    .form-filed.required-field
                      input#inp1(type='email', required='', data-validate='email')
                      label(for='inp1') Email Address
                    button(type='submit')
                      | SUBSCRIBE
                      span.icon-mail
      // page item
      .puship-bottom-block.clearfix
      .above-footer
    include _footer
